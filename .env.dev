# Azure Teams AI Chatbot - DEV Environment Configuration
FLASK_ENV=dev
LOG_LEVEL=INFO
PORT=8000

# Azure OpenAI Configuration
# Replace these with your actual Azure OpenAI credentials
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-35-turbo

# Bot Framework Configuration
# Replace these with your actual Bot Framework credentials
MICROSOFT_APP_ID=your-bot-app-id-here
MICROSOFT_APP_PASSWORD=your-bot-app-password-here

# Azure Key Vault (Optional - for production)
# AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Application Configuration
MAX_CONVERSATION_HISTORY=20
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7
